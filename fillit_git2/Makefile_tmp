NAME = fillit
COMPILERC = gcc
FLAGS = -Wall -Wextra -Werror
SOURCES_DIR = sources/
SOURCES  = main.c read.c slv_auxf.c slv_tetr.c analyse.c
OBJECTS = $(SOURCES:.c=.o)
HEADERS_DIR = includes
HEADERLIB_DIR = libft
LIBDIR = libft/
ALLHEADERS = includes/fillit.h includes/slv_tetr.h libft/libft.h

all: $(NAME)

$(NAME): $(OBJECTS) lib
	gcc $(FLAGS) -o $(NAME) $(OBJECTS) -I $(HEADERS_DIR) -I $(HEADERLIB_DIR) -L $(LIBDIR) -lft

%.o: $(SOURCES_DIR)%.c $(ALLHEADERS)
	gcc -o $@ -c $< $(FLAGS) -I$(HEADERS_DIR) -I $(HEADERLIB_DIR)

lib:
	$(MAKE) -C libft

clean:
	rm -f $(OBJECTS)
	$(MAKE) -C libft clean

fclean: clean
	rm -f $(NAME)
	$(MAKE) -C libft fclean

re: fclean all